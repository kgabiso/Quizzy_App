<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.example.kaysherman.qizzy.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/quizzy_quizz"
            android:textColor="@color/textIcon"
            android:layout_marginTop="60dp"
            android:fontFamily="cursive"
            android:keepScreenOn="true"
            android:id="@+id/textView"
            android:layout_gravity="left|top"
            android:textSize="50sp"
            android:textStyle="italic|bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/results"
            android:textColor="@color/lightPrimary"
            android:keepScreenOn="true"
            android:layout_gravity="left"
            android:fontFamily="serif"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:clickable="false"
            android:longClickable="false"
            android:layout_gravity="center"
            android:theme="@style/RatingBar"
            android:numStars="5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/percentage"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:keepScreenOn="true"
            android:fontFamily="serif-monospace"
            android:id="@+id/percentage"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/score"
            android:textColor="@color/colorPrimaryDark"
            android:keepScreenOn="true"
            android:fontFamily="serif-monospace"
            android:id="@+id/score"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"/>



    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="140dp"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_message_black_24dp"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_green_dark"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="80dp"
        android:elevation="6dp"
        android:visibility="invisible"
        android:src="@drawable/ic_feedback_black_24dp"
        app:backgroundTint="@android:color/holo_blue_bright"
        app:pressedTranslationZ="12dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/next_question"
        android:src="@drawable/ic_add_black_24dp"
        app:pressedTranslationZ="12dp"/>


</android.support.design.widget.CoordinatorLayout>
